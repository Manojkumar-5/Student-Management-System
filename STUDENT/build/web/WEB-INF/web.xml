<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

    <servlet>
        <servlet-name>Update</servlet-name>
        <servlet-class>Update</servlet-class>
    </servlet>
    
        <servlet>
        <servlet-name>StudentDisplay</servlet-name>
        <servlet-class>StudentDisplay</servlet-class>
        </servlet>
        
        <servlet>
        <servlet-name>UpdateJava</servlet-name>
        <servlet-class>UpdateJava</servlet-class>
        </servlet>
        
    <servlet-mapping>
        <servlet-name>Update</servlet-name>
        <url-pattern>/Update</url-pattern>
    </servlet-mapping>
    
     <servlet-mapping>
        <servlet-name>StudentDisplay</servlet-name>
        <url-pattern>/StudentDisplay</url-pattern>
    </servlet-mapping>
    
    
     <servlet-mapping>
        <servlet-name>UpdateJava</servlet-name>
        <url-pattern>/UpdateJava</url-pattern>
    </servlet-mapping>
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
